" Plug plugin manager configuration
set nocompatible
filetype plugin indent on
execute pathogen#infect()

" Display line number
set number
" Syntax coloration
syntax on
" Tabulation
set tabstop=4
set shiftwidth=4
set expandtab

colorscheme gruvbox
set background=dark

" Insensitive case search
set ic

" Silent is set to avoid a warning on machines without git
silent! call plug#begin('~/.vim/bundle')
Plug 'vim-airline/vim-airline'
Plug 'tpope/vim-fugitive'
Plug 'pangloss/vim-javascript'
Plug '2072/PHP-Indenting-for-VIm'
Plug 'mipmip/vim-fluid'
Plug 'morhetz/gruvbox'
call plug#end()

set laststatus=2
set encoding=utf-8
set t_Co=256

" Auto compl√©tion automatique pour les fichiers
autocmd BufNewFile,BufRead *.ts   set syntax=typoscript
autocmd BufNewFile,BufRead *.less   set syntax=less

set clipboard=unnamedplus

" Default splits opening below and right
set splitbelow
set splitright

" Remap // in visual mode to search text under the cursor
vnoremap // y/<C-R>"<CR>
